<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools">


    <ImageView
        android:id="@+id/anim0"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece0"
        android:rotation="90"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece1"
        android:layout_marginLeft="50dp"
        android:rotation="0"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim2"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece2"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim3"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece3"
        android:layout_marginLeft="150dp"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim4"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece4"
        android:layout_marginLeft="200dp"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim5"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece5"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="-45dp"/>

    <ImageView
        android:id="@+id/anim6"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/piece6"
        android:layout_marginLeft="320dp"
        android:layout_marginTop="-45dp"/>



    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:layout_weight=".7"
                android:src="@drawable/tetris_titre" />


        <android.support.v7.widget.CardView
            android:id="@+id/buttonNewGame"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="5dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="@string/newgame"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|center_horizontal" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/buttonHighScores"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            card_view:elevation="1dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="@string/score0"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|center_horizontal" />

        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:id="@+id/buttonAbout"
            style="@style/CardView.Light"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="20dp"
            card_view:elevation="1dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="?attr/selectableItemBackground"
                android:text="@string/about"
                android:textSize="20sp"
                android:textColor="@color/colorAccent"
                android:gravity="center_vertical|center_horizontal" />

        </android.support.v7.widget.CardView>

    </LinearLayout>

</RelativeLayout>
